#! /bin/bash

# File for non-machine specific additions to .bash_profile

alias code="source ~/bin/code"
alias root="source ~/bin/root"
alias scd="source ~/bin/scd"
alias sgem="source ~/bin/sgem"
alias profile="source ~/bin/switch-profile"

alias p="profile"
alias pau="profile prod-au"
alias pde="profile prod-de"
alias pnp="profile nonprod"
alias pus="profile prod-us"

alias kau="profile prod-au && k9s"
alias kde="profile prod-de && k9s"
alias knp="profile nonprod && k9s"
alias kus="profile prod-us && k9s"

alias pscreen='screen -d -R -S $profile'
