[user]
  name = Garry Shutler
  email = garry@robustsoftware.co.uk

[color]
  ui = auto

[core]
  excludesfile = /Users/gshutler/.gitignore_global
  editor = mvim -v +startinsert

[merge]
  defaultToUpstream = true

[push]
  default = upstream

[status]
  short = true

[alias]
  amend = commit --amend
  ch = checkout
  cm = commit --verbose
  co = checkout
  fall = fetch --all
  ff-only = merge --ff-only
  ffonly = merge --ff-only
  ma = checkout master
  mas = checkout master
  master = checkout master
  new = checkout -b
  newb = checkout -b
  no-ff = merge --no-ff
  noff = merge --no-ff
  nom = branch --no-merged
  nomerged = branch --no-merged
  pff-only = pull --ff-only
  pusho = push -u origin
  s = status

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path = 

[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
