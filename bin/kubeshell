#! /bin/bash

# Fail fast
set -o errexit

kubeshell=$(find ~/.kubeshells -type f -exec basename {} ";" | selecta)

source ~/.kubeshells/$kubeshell

echo
echo "Pod selector: $podselector"
echo "Command:      $command"
echo

pod=$(kubectl get pods --no-headers --output custom-columns=:metadata.name --selector $podselector | selecta)

kubectl exec -it $pod -- $command
