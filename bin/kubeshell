#! /bin/bash

# Fail fast
set -o errexit

kubeshell=$(find -s ~/.kubeshells -type f -depth 1 ! -name .gitignore -exec basename {} ";" | selecta)

source ~/.kubeshells/$kubeshell

echo
if [ -n "$namespace" ] ; then
  echo "Namespace: $namespace"
fi
echo "Pod args:  $podargs"
echo "Command:   $command"
echo

echo "kubectl get pods $namespace --no-headers --output custom-columns=:metadata.name $podargs"

pod=$(kubectl get pods $namespace --no-headers --output custom-columns=:metadata.name $podargs | selecta)

kubectl exec -it $pod $namespace -- $command
